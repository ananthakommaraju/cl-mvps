<?xml version="1.0" encoding="UTF-8" standalone="no"?>

<beans xmlns="http://www.springframework.org/schema/beans"
       xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance"
       xmlns:context="http://www.springframework.org/schema/context"
       xsi:schemaLocation="http://www.springframework.org/schema/beans
                http://www.springframework.org/schema/beans/spring-beans-3.1.xsd http://www.springframework.org/schema/context
                http://www.springframework.org/schema/context/spring-context.xsd">

    <context:annotation-config/>


    <!-- proxy the Eligibility Service -->
    <bean id="determineEligibleCustomerInstructionsProxy" class="org.springframework.aop.framework.ProxyFactoryBean">
        <property name="target" ref="eligibilityService"/>
    </bean>
    <!-- proxy for the WZ Eligibility Service -->
    <bean id="determineEligibleCustomerInstructionsWZProxy" class="org.springframework.aop.framework.ProxyFactoryBean">
        <property name="target" ref="eligibilityServiceWZ"/>
    </bean>

    <bean id="eligibilityService" class="com.lloydsbanking.salsa.eligibility.service.EligibilityService"/>
    <bean id="eligibilityServiceWZ" class="com.lloydsbanking.salsa.eligibility.service.EligibilityServiceWZ"/>
    <bean id="EligibilityAppInfo" class="com.lloydsbanking.salsa.eligibility.monitoring.EligibilityAppInfo"/>

</beans>
