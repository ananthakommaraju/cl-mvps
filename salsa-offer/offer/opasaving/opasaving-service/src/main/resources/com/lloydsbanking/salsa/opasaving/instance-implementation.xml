<beans xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance"
       xmlns:context="http://www.springframework.org/schema/context"
       xmlns="http://www.springframework.org/schema/beans"
       xsi:schemaLocation="http://www.springframework.org/schema/beans http://www.springframework.org/schema/beans/spring-beans-3.2.xsd

            http://www.springframework.org/schema/context http://www.springframework.org/schema/context/spring-context-3.2.xsd">

    <context:component-scan base-package="com.lloydsbanking.salsa.opasaving.service"/>
    <context:component-scan base-package="com.lloydsbanking.salsa.opasaving"/>
    <context:component-scan base-package="com.lloydsbanking.salsa.offer"/>

    <import resource="classpath:/com/lloydsbanking/salsa/offer/offer-common.xml"/>
    <import resource="classpath:/com/lloydsbanking/salsa/opasaving/downstream-clients.xml"/>
    <import resource="classpath:/com/lloydsbanking/salsa/downstream/pam/pam-common.xml"/>
    <import resource="classpath:/com/lloydsbanking/salsa/downstream/pam/pam-create.xml"/>
    <import resource="classpath:/com/lloydsbanking/salsa/downstream/pam/pam-retrieve.xml"/>
    <import resource="classpath:/com/lloydsbanking/salsa/logging/application/application-logging.xml"/>

    <bean id="headerRetriever" class="com.lloydsbanking.salsa.header.gmo.HeaderRetriever"/>
    <bean id="requestToResponseHeaderConverter"
          class="com.lloydsbanking.salsa.header.gmo.RequestToResponseHeaderConverter"/>

    <bean id="dateFactory" class="com.lloydsbanking.salsa.date.DateFactory"/>

    <bean id="exceptionHelper" class="com.lloydsbanking.salsa.opasaving.service.utility.ExceptionHelper"/>

    <bean id="createPamService" class="com.lloydsbanking.salsa.downstream.pam.service.CreatePamService"/>
    <bean id="updatePamService" class="com.lloydsbanking.salsa.downstream.pam.service.UpdatePamService"/>
    <bean id="retrievePamService" class="com.lloydsbanking.salsa.downstream.pam.service.RetrievePamService"/>

    <bean id="eligibilityRetriever" class="com.lloydsbanking.salsa.offer.downstream.EligibilityRetriever"/>
    <bean id="ineligibleProductsEvaluator"
          class="com.lloydsbanking.salsa.offer.apply.evaluate.IneligibleProductsEvaluator"/>

    <bean id="applyService" class="com.lloydsbanking.salsa.offer.apply.ApplyService"/>
  <bean id="eligibilityServiceDeci"
          class="com.lloydsbanking.salsa.offer.eligibility.downstream.EligibilityService"></bean>

    <bean id="rpcService"
          class="com.lloydsbanking.salsa.opasaving.service.downstream.RPCService"></bean>
    <bean id="switchClient" class="com.lloydsbanking.salsa.downstream.switches.SwitchServiceImpl"/>
    <bean id="dcpcService"
          class="com.lloydsbanking.salsa.opasaving.service.downstream.DCPCService"></bean>
    <bean id="dcpcServiceClient"
          class="com.lloydsbanking.salsa.opasaving.service.downstream.DCPCServiceClient"></bean>
    <bean id="requestValidatorAndInitializer"
          class="com.lloydsbanking.salsa.opasaving.service.validate.RequestValidatorAndInitializer"/>
    <bean id="offerProductArrangementResponseFactory"
          class="com.lloydsbanking.salsa.opasaving.service.convert.OfferProductArrangementResponseFactory"/>

</beans>
