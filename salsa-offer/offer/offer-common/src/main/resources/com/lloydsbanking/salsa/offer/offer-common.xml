          class="com.lloydsbanking.salsa.offer.identify.utility.DeliveryPointSuffixAnalyser"/>

    <bean id="productPartyDataToProductConverter"
          class="com.lloydsbanking.salsa.offer.identify.convert.ProductPartyDataToProductConverter"/>

    <bean id="retrieveEIDVScoreRequestFactory"
          class="com.lloydsbanking.salsa.offer.verify.convert.RetrieveEIDVScoreRequestFactory"/>

    <bean id="customerScoreEvaluator"
          class="com.lloydsbanking.salsa.offer.verify.evaluate.EidvStatusEvaluator"/>

    <bean id="eidvRetriever"
          class="com.lloydsbanking.salsa.offer.verify.downstream.EidvRetriever">
        <property name="x711ClientMap">
            <util:map id="x711ClientMap">
                <entry key="LTB" value-ref="x711ClientLtb"/>
                <entry key="HLX" value-ref="x711ClientHlx"/>
                <entry key="BOS" value-ref="x711ClientBos"/>
                <entry key="VER" value-ref="x711ClientVer"/>
            </util:map>
        </property>

    </bean>
    <bean id="offerToEligibilityRequestConverter"
          class="com.lloydsbanking.salsa.offer.eligibility.convert.OfferToEligibilityRequestConverter"/>
