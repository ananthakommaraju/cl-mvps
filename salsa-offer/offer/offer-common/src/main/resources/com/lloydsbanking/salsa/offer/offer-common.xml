          class="com.lloydsbanking.salsa.offer.apply.convert.OfferToRpcRequestConverter"/>
    <bean id="asmResponseToProductFamilyConverter"
          class="com.lloydsbanking.salsa.offer.apply.convert.AsmResponseToProductFamilyConverter"/>
