    <bean id="creditScoreRetriever" class="com.lloydsbanking.salsa.offer.apply.downstream.CreditScoreRetriever"/>
    <bean id="productConditionsRetriever" class="com.lloydsbanking.salsa.offer.apply.downstream.ProductConditionsRetriever"/>

