<project name="WSDL2Java" basedir=".">

    <taskdef name="wsdl2java" classname="com.ibm.websphere.ant.tasks.WSDL2Java"/>
    <property name="dir.java.ws.src" value="${basedir}/../opacc-schema/src/main/resources"/>
    <property name="dir.output" value="${generated-sources.ibm-wsdl-java}"/>
    <property name="dir.ns2pk.prop.location" value="${basedir}/src/main/resources"/>

    <target name="doWSDLtoJava" depends="doWSDLtoJavaForOpa"/>

    <target name="doWSDLtoJavaForOpa" description="WSDL To Java">
        <wsdl2java
                url="${dir.java.ws.src}/schema/Interfaces/TSK_SalesProcessManagement_Exp_IA_OfferProductArrangementExport_Savings.wsdl"
                output="${dir.output}"
                role="client"
                container="web"
                genImplSer="true"
                genJava="overwrite"
                genXml="overwrite"
                all="true"
                fileNStoPkg="${dir.ns2pk.prop.location}/ns2pkg.properties"
                introspect="true" verbose="false">
        </wsdl2java>
    </target>
</project>