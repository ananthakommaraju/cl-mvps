<?xml version="1.0" encoding="UTF-8" standalone="no"?>

<beans xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance"
       xmlns:context="http://www.springframework.org/schema/context"
       xmlns="http://www.springframework.org/schema/beans"
       xsi:schemaLocation="http://www.springframework.org/schema/beans
                http://www.springframework.org/schema/beans/spring-beans-3.1.xsd http://www.springframework.org/schema/context
                http://www.springframework.org/schema/context/spring-context.xsd">

    <bean id="opapcaAppInfo" class="com.lloydsbanking.salsa.opapca.monitoring.OpapcaAppInfo" />

    <!-- proxy the RrbService for auditing -->
    <bean id="opaPcaServiceProxy" class="org.springframework.aop.framework.ProxyFactoryBean">
        <property name="target" ref="opaPcaService"/>
    </bean>

    <context:annotation-config/>
</beans>
