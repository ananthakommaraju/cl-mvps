<beans xmlns="http://www.springframework.org/schema/beans"
       xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance"
       xmlns:jpa="http://www.springframework.org/schema/data/jpa"
       xmlns:jee="http://www.springframework.org/schema/jee"
       xmlns:tx="http://www.springframework.org/schema/tx"
       xmlns:c="http://www.springframework.org/schema/c"
       xmlns:util="http://www.springframework.org/schema/util"
       xsi:schemaLocation="http://www.springframework.org/schema/beans http://www.springframework.org/schema/beans/spring-beans-3.2.xsd
            http://www.springframework.org/schema/jee http://www.springframework.org/schema/jee/spring-jee-3.2.xsd
            http://www.springframework.org/schema/data/jpa http://www.springframework.org/schema/data/jpa/spring-jpa.xsd
            http://www.springframework.org/schema/tx http://www.springframework.org/schema/tx/spring-tx.xsd">

    <tx:annotation-driven />
    <bean id="f447Client" class="com.lloydsbanking.salsa.downstream.ocis.client.f447.F447ClientImpl">
        <constructor-arg value="${ocis.f447.service.url}"/>
        <constructor-arg>
            <bean class="com.lloydsbanking.xml.schema.enterprise.customermanufacturing.ocis.F447EnqPartyId_Service"/>
        </constructor-arg>
        <constructor-arg value="${ocis.f447.service.timeout:19000}"/>
        <constructor-arg ref="cxfClientLoggingInitialiser"/>
    </bean>
    <bean id="f336Client" class="com.lloydsbanking.salsa.downstream.ocis.client.f336.F336ClientImpl">
        <constructor-arg value="${ocis.f336.service.url}"/>
        <constructor-arg>
            <bean class="com.lloydsbanking.xml.schema.enterprise.customermanufacturing.ocis.F336BroProductHoldings_Service"/>
        </constructor-arg>
        <constructor-arg value="${ocis.f336.service.timeout:19000}"/>
        <constructor-arg ref="cxfClientLoggingInitialiser"/>
    </bean>
    <bean id="f061Client" class="com.lloydsbanking.salsa.downstream.ocis.client.f061.F061ClientImpl">
        <constructor-arg value="${ocis.f061.service.url}"/>
        <constructor-arg>
            <bean class="com.lloydstsb.schema.personal.retailparty.ocis.F061EnqPtyDetails_Service"/>
        </constructor-arg>
        <constructor-arg value="${ocis.f061.service.timeout:19000}"/>
        <constructor-arg ref="cxfClientLoggingInitialiser"/>
    </bean>
    <bean id="f204Client" class="com.lloydsbanking.salsa.downstream.asm.client.f204.F204ClientImpl">
        <constructor-arg value="${asm.f204.service.url}"/>
        <constructor-arg>
            <bean class="com.lloydstsb.schema.personal.lendingserviceplatform.asm.F204FunCRADecisnReq_Service"/>
        </constructor-arg>
        <constructor-arg value="${asm.f204.service.timeout:19000}"/>
        <constructor-arg ref="cxfClientLoggingInitialiser"/>
    </bean>
    <bean id="f205Client" class="com.lloydsbanking.salsa.downstream.asm.client.f205.F205ClientImpl">
        <constructor-arg value="${asm.f205.service.url}"/>
        <constructor-arg>
            <bean class="com.lloydstsb.schema.personal.lendingserviceplatform.asm.F205FunChequeDecisnReq_Service"/>
        </constructor-arg>
        <constructor-arg value="${asm.f205.service.timeout:19000}"/>
        <constructor-arg ref="cxfClientLoggingInitialiser"/>
    </bean>
  <bean id="f062Client" class="com.lloydsbanking.salsa.downstream.ocis.client.f062.F062ClientImpl">
        <constructor-arg value="${ocis.f062.service.url}"/>
        <constructor-arg>
            <bean class="com.lloydstsb.schema.personal.retailparty.ocis.F062AddPtyDetails_Service"/>
        </constructor-arg>
        <constructor-arg value="${ocis.f062.service.timeout:19000}"/>
        <constructor-arg ref="cxfClientLoggingInitialiser"/>
    </bean>


    <bean id="x711ClientLtb" class="com.lloydsbanking.salsa.downstream.eidv.client.x711.X711ClientImpl">
        <constructor-arg value="${eidv.x711.ltb.service.url}"/>
        <constructor-arg>
            <bean class="lloydstsb.schema.personal.customer.partyidandv.CustomerPartyIDandVService_Service"/>
        </constructor-arg>
        <constructor-arg value="${eidv.x711.ltb.service.timeout:19000}"/>
        <constructor-arg ref="cxfClientLoggingInitialiser"/>
    </bean>

    <bean id="x711ClientVer" class="com.lloydsbanking.salsa.downstream.eidv.client.x711.X711ClientImpl">
        <constructor-arg value="${eidv.x711.ver.service.url}"/>
        <constructor-arg>
            <bean class="lloydstsb.schema.personal.customer.partyidandv.CustomerPartyIDandVService_Service"/>
        </constructor-arg>
        <constructor-arg value="${eidv.x711.ver.service.timeout:19000}"/>
        <constructor-arg ref="cxfClientLoggingInitialiser"/>
    </bean>

    <bean id="x711ClientBos" class="com.lloydsbanking.salsa.downstream.eidv.client.x711.X711ClientImpl">
        <constructor-arg value="${eidv.x711.bos.service.url}"/>
        <constructor-arg>
            <bean class="lloydstsb.schema.personal.customer.partyidandv.CustomerPartyIDandVService_Service"/>
        </constructor-arg>
        <constructor-arg value="${eidv.x711.bos.service.timeout:19000}"/>
        <constructor-arg ref="cxfClientLoggingInitialiser"/>
    </bean>

    <bean id="x711ClientHlx" class="com.lloydsbanking.salsa.downstream.eidv.client.x711.X711ClientImpl">
        <constructor-arg value="${eidv.x711.hlx.service.url}"/>
        <constructor-arg>
            <bean class="lloydstsb.schema.personal.customer.partyidandv.CustomerPartyIDandVService_Service"/>
        </constructor-arg>
        <constructor-arg value="${eidv.x711.hlx.service.timeout:19000}"/>
        <constructor-arg ref="cxfClientLoggingInitialiser"/>
    </bean>


    <bean id="siraClient" class="com.lloydsbanking.salsa.downstream.sira.client.SiraClientImpl">
        <constructor-arg value="${sira.service.url}"/>
        <constructor-arg>
            <bean class="com.synectics_solutions.ws.webservices.dataservices.v2.servicesaccess.ServicesAccess"/>
        </constructor-arg>
        <constructor-arg value="${sira.service.timeout:19000}"/>
        <constructor-arg ref="cxfClientLoggingInitialiser"/>
    </bean>

    <jee:jndi-lookup id="ibPamConnectionPool" jndi-name="jdbc/ibPamData"/>
    <jee:jndi-lookup id="ibPrdConnectionPool" jndi-name="jdbc/ibPrdData"/>

    <bean id="transactionManager" class="org.springframework.orm.jpa.JpaTransactionManager">
        <property name="entityManagerFactory" ref="ibPamEntityManagerFactory"/>
    </bean>

    <bean id="prdTransactionManager" class="org.springframework.orm.jpa.JpaTransactionManager">
        <property name="entityManagerFactory" ref="ibPrdEntityManagerFactory"/>
    </bean>


    <bean id="ibPamHibernateJpaAdapter" class="org.springframework.orm.jpa.vendor.HibernateJpaVendorAdapter">
        <property name="generateDdl" value="false"/>
        <property name="showSql" value="true"/>
        <property name="databasePlatform"
                  value="${ibPamData.database.hibernate.dialect:org.hibernate.dialect.Oracle10gDialect}"/>
    </bean>

    <bean id="ibPrdHibernateJpaAdapter" class="org.springframework.orm.jpa.vendor.HibernateJpaVendorAdapter">
        <property name="generateDdl" value="false"/>
        <property name="showSql" value="true"/>
        <property name="databasePlatform"
                  value="${ibPrdData.database.hibernate.dialect:org.hibernate.dialect.Oracle10gDialect}"/>
    </bean>

    <bean id="ibPamEntityManagerFactory" class="org.springframework.orm.jpa.LocalContainerEntityManagerFactoryBean">
        <property name="packagesToScan" value="com.lloydsbanking.salsa.downstream.pam.model"/>
        <property name="jpaVendorAdapter" ref="ibPamHibernateJpaAdapter"/>
        <property name="dataSource" ref="ibPamConnectionPool"/>
    </bean>
    <bean id="ibPrdEntityManagerFactory" class="org.springframework.orm.jpa.LocalContainerEntityManagerFactoryBean">
        <property name="packagesToScan" value="com.lloydsbanking.salsa.downstream.prd.model"/>
        <property name="jpaVendorAdapter" ref="ibPrdHibernateJpaAdapter"/>
        <property name="dataSource" ref="ibPrdConnectionPool"/>
    </bean>
    <bean id="rpcServiceClient" class="com.lloydsbanking.salsa.offer.apply.downstream.RpcServiceClient">
        <constructor-arg value="${rpc.service.url}"/>
        <constructor-arg ref="cxfClientLoggingInitialiser"/>
    </bean>
    <bean id="eligibilityServiceClient" class="com.lloydsbanking.salsa.offer.downstream.EligibilityServiceClient">
        <constructor-arg value="${eligibility.service.url}"/>
        <constructor-arg ref="cxfClientLoggingInitialiser"/>
    </bean>

    <bean class="com.lloydsbanking.salsa.aop.CallLoggingAndTimingAutoProxyCreator">
        <constructor-arg>
            <list>
                <bean class="com.lloydsbanking.salsa.logging.BeanLoggingConfig" c:beanName="f447Client"
                      c:interfaceClass="com.lloydsbanking.salsa.downstream.ocis.client.f447.F447Client"
                      c:prefix="OCIS-MatchInvolvedParty-F447"/>
                <bean class="com.lloydsbanking.salsa.logging.BeanLoggingConfig" c:beanName="f336Client"
                      c:interfaceClass="com.lloydsbanking.salsa.downstream.ocis.client.f336.F336Client"
                      c:prefix="OCIS-RetrieveProductHoldings-F336"/>
                <bean class="com.lloydsbanking.salsa.logging.BeanLoggingConfig" c:beanName="f061Client"
                      c:interfaceClass="com.lloydsbanking.salsa.downstream.ocis.client.f061.F061Client"
                      c:prefix="OCIS-updateCustomerDetailsFromOcis-F061"/>
                <bean class="com.lloydsbanking.salsa.logging.BeanLoggingConfig" c:beanName="f204Client"
                      c:interfaceClass="com.lloydsbanking.salsa.downstream.asm.client.f204.F204Client"
                      c:prefix="ASM-RetrieveFraudDecision-F204"/>
                <bean class="com.lloydsbanking.salsa.logging.BeanLoggingConfig" c:beanName="f205Client"
                      c:interfaceClass="com.lloydsbanking.salsa.downstream.asm.client.f205.F205Client"
                      c:prefix="ASM-RetrieveCreditDecision-F205"/>
                <bean class="com.lloydsbanking.salsa.logging.BeanLoggingConfig" c:beanName="x711ClientLtb"
                      c:interfaceClass="com.lloydsbanking.salsa.downstream.eidv.client.x711.X711Client"
                      c:prefix="EIDV-VerifyInvolvedParty-X711"/>
                <bean class="com.lloydsbanking.salsa.logging.BeanLoggingConfig" c:beanName="x711ClientVer"
                      c:interfaceClass="com.lloydsbanking.salsa.downstream.eidv.client.x711.X711Client"
                      c:prefix="EIDV-VerifyInvolvedParty-X711"/>
                <bean class="com.lloydsbanking.salsa.logging.BeanLoggingConfig" c:beanName="x711ClientBos"
                      c:interfaceClass="com.lloydsbanking.salsa.downstream.eidv.client.x711.X711Client"
                      c:prefix="EIDV-VerifyInvolvedParty-X711"/>
                <bean class="com.lloydsbanking.salsa.logging.BeanLoggingConfig" c:beanName="x711ClientHlx"
                      c:interfaceClass="com.lloydsbanking.salsa.downstream.eidv.client.x711.X711Client"
                      c:prefix="EIDV-VerifyInvolvedParty-X711"/>
                <bean class="com.lloydsbanking.salsa.logging.BeanLoggingConfig" c:beanName="siraClient"
                      c:interfaceClass="com.lloydsbanking.salsa.downstream.sira.client.SiraClient"
                      c:prefix="SIRA-SubmitWorkItem"/>
                <bean class="com.lloydsbanking.salsa.logging.BeanLoggingConfig" c:beanName="f062Client"
                      c:interfaceClass="com.lloydsbanking.salsa.downstream.ocis.client.f062.F062Client"
                      c:prefix="OCIS-CreateNewCustomerOnOcis-F062"/>
            </list>
        </constructor-arg>
    </bean>

    <jpa:repositories base-package="com.lloydsbanking.salsa.downstream.pam.jdbc"
                      entity-manager-factory-ref="ibPamEntityManagerFactory"
                      transaction-manager-ref="transactionManager"/>

    <jpa:repositories base-package="com.lloydsbanking.salsa.downstream.prd.jdbc"
                      entity-manager-factory-ref="ibPrdEntityManagerFactory"
                      transaction-manager-ref="prdTransactionManager"/>
</beans>
