<beans xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance"
       xmlns="http://www.springframework.org/schema/beans"
       xmlns:jaxws="http://cxf.apache.org/jaxws" xmlns:util="http://www.springframework.org/schema/util"
       xsi:schemaLocation="http://www.springframework.org/schema/beans http://www.springframework.org/schema/beans/spring-beans-3.2.xsd
        http://cxf.apache.org/jaxws http://cxf.apache.org/schemas/jaxws.xsd
         http://www.springframework.org/schema/util http://www.springframework.org/schema/util/spring-util-3.2.xsd">

    <!--
        A Spring context configuration file which broadly configures the app as in production, but implements a number of profiles
        allowing tests to determine the nature of downstream dependencies wired in - real, in-process mocks and remote mocks.
    -->
    <import resource="classpath:/com/lloydsbanking/salsa/configuration.xml"/>

    <import resource="classpath:/com/lloydsbanking/salsa/opapca/downstream-clients.xml"/>
    <import resource="classpath:/com/lloydsbanking/salsa/logging.xml"/>

    <bean id="dataHelper" class="com.lloydsbanking.salsa.opapca.service.TestDataHelper"/>
    <bean id="dateFactory" class="com.lloydsbanking.salsa.date.DateFactory"/>

   <!-- <bean id="mockScenarioHelper" class="com.lloydsbanking.salsa.opapca.service.RemoteMockScenarioHelper"/>-->

    <bean id="evaluateAddressUpdData"
          class="com.lloydsbanking.salsa.offer.createinvolvedparty.evaluate.EvaluateAddressUpdData"/>
    <bean id="evaluatePersonalUpdData"
          class="com.lloydsbanking.salsa.offer.createinvolvedparty.evaluate.EvaluatePersonalUpdData"/>
    <bean id="employerAddressDataFactory"
          class="com.lloydsbanking.salsa.offer.createinvolvedparty.convert.EmployerAddressDataFactory"/>
    <bean id="unstructuredAddressFactory"
          class="com.lloydsbanking.salsa.offer.createinvolvedparty.convert.UnstructuredAddressFactory"/>
    <bean id="structuredAddressFactory"
          class="com.lloydsbanking.salsa.offer.createinvolvedparty.convert.StructuredAddressFactory"/>
    <bean id="evaluateStrength"
          class="com.lloydsbanking.salsa.offer.createinvolvedparty.evaluate.EvaluateStrength"/>
    <bean id="offerLookupDataRetriever"
          class="com.lloydsbanking.salsa.offer.pam.LookupDataRetriever"/>
    <bean id="offerToEligibilityRequestConverter"
          class="com.lloydsbanking.salsa.offer.eligibility.convert.OfferToEligibilityRequestConverter"/>
    <bean id="siraRequestFactory"
          class="com.lloydsbanking.salsa.opapca.service.convert.SiraRequestFactory"/>
    <bean id="siraHelper"
          class="com.lloydsbanking.salsa.opapca.service.utility.SiraHelper"/>

    <bean id="exceptionUtility"
          class="com.lloydsbanking.salsa.offer.exception.ExceptionUtility"/>

    <bean id="phoneUpdDataFactory"
          class="com.lloydsbanking.salsa.offer.createinvolvedparty.convert.PhoneUpdDataFactory"/>
    <bean id="updateOcisDetailsRequestFactory"
          class="com.lloydsbanking.salsa.offer.createinvolvedparty.convert.CreateOcisCustomerRequestFactory"/>
    <bean id="partyNonCoreUpdDataFactory"
          class="com.lloydsbanking.salsa.offer.createinvolvedparty.convert.PartyNonCoreUpdDataFactory"/>
    <bean id="headerRetriever" class="com.lloydsbanking.salsa.header.gmo.HeaderRetriever"/>
    <bean id="partyRelatedConverter"
          class="com.lloydsbanking.salsa.downstream.pam.service.convert.PartyRelatedConverter"></bean>
    <jaxws:client id="mockControlClient"
                  serviceClass="com.lloydsbanking.salsa.remotemock.MockControlServicePortType"
                  address="${remotemock.control.url}"/>


    <jaxws:client id="mockOcisF336Control"
                  serviceClass="com.lloydsbanking.salsa.remotemock.MockControlOcisF336ServicePortType"
                  address="${remotemock.control.ocis.f336.url}"/>


    <jaxws:client id="mockOcisF447Control"
                  serviceClass="com.lloydsbanking.salsa.remotemock.MockControlOcisF447ServicePortType"
                  address="${remotemock.control.ocis.f447.url}"/>

    <jaxws:client id="mockSiraControl"
                  serviceClass="com.lloydsbanking.salsa.remotemock.MockControlSiraServicePortType"
                  address="${remotemock.control.sira.url}"/>

    <jaxws:client id="mockOcisF061Control"
                  serviceClass="com.lloydsbanking.salsa.remotemock.MockControlOcisF061ServicePortType"
                  address="${remotemock.control.ocis.f061.url}"/>
    <jaxws:client id="mockOcisF062Control"
                  serviceClass="com.lloydsbanking.salsa.remotemock.MockControlOcisF062ServicePortType"
                  address="${remotemock.control.ocis.f062.url}"/>
    <jaxws:client id="mockAsmF204Control"
                  serviceClass="com.lloydsbanking.salsa.remotemock.MockControlAsmF204ServicePortType"
                  address="${remotemock.control.asm.f204.url}"/>
    <jaxws:client id="mockAsmF205Control"
                  serviceClass="com.lloydsbanking.salsa.remotemock.MockControlAsmF205ServicePortType"
                  address="${remotemock.control.asm.f205.url}"/>


    <bean id="opaPcaClient" class="com.lloydsbanking.salsa.opapca.client.OpaPcaClientImpl">
        <constructor-arg value="${opapca.service.url}"/>
        <constructor-arg value="true"/>
    </bean>

    <jaxws:client id="mockRpcControl"
                  serviceClass="com.lloydsbanking.salsa.remotemock.MockControlRpcServicePortType"
                  address="${remotemock.control.rpc.url}"/>

    <jaxws:client id="mockEligibilityControl"
                  serviceClass="com.lloydsbanking.salsa.remotemock.MockControlEligibilityServicePortType"
                  address="${remotemock.control.eligibility.url}"/>

    <bean id="ibPamConnectionPool" class="org.apache.tomcat.jdbc.pool.DataSource" destroy-method="close">
        <property name="driverClassName" value="${ibPamData.database.driver.class}"/>
        <property name="url" value="${ibPamData.database.connectionstring}"/>
        <property name="username" value="${ibPamData.database.username}"/>
        <property name="password" value="${ibPamData.database.password}"/>
        <property name="initialSize" value="10"/>
        <property name="maxActive" value="20"/>
        <property name="maxIdle" value="5"/>
        <property name="minIdle" value="2"/>
        <property name="maxWait" value="${ibPamData.database.maxwait}"/>
    </bean>


    <bean id="ibPamEntityManagerFactory" class="org.springframework.orm.jpa.LocalContainerEntityManagerFactoryBean">
        <property name="packagesToScan" value="com.lloydsbanking.salsa.downstream.pam.model"/>
        <property name="jpaVendorAdapter" ref="ibPamHibernateJpaAdapter"/>
        <property name="dataSource" ref="ibPamConnectionPool"/>
    </bean>

    <bean id="ibPamHibernateJpaAdapter" class="org.springframework.orm.jpa.vendor.HibernateJpaVendorAdapter">
        <property name="generateDdl" value="true"/>
        <property name="showSql" value="false"/>
    </bean>
    <bean id="ibPrdConnectionPool" class="org.apache.tomcat.jdbc.pool.DataSource" destroy-method="close">
        <property name="driverClassName" value="${ibPrdData.database.driver.class}"/>
        <property name="url" value="${ibPrdData.database.connectionstring}"/>
        <property name="username" value="${ibPrdData.database.username}"/>
        <property name="password" value="${ibPrdData.database.password}"/>
        <property name="initialSize" value="10"/>
        <property name="maxActive" value="20"/>
        <property name="maxIdle" value="5"/>
        <property name="minIdle" value="2"/>
        <property name="maxWait" value="${ibPrdData.database.maxwait}"/>
    </bean>

    <bean id="ibPrdEntityManagerFactory" class="org.springframework.orm.jpa.LocalContainerEntityManagerFactoryBean">
        <property name="packagesToScan" value="com.lloydsbanking.salsa.downstream.prd.model"/>
        <property name="jpaVendorAdapter" ref="ibPrdHibernateJpaAdapter"/>
        <property name="dataSource" ref="ibPrdConnectionPool"/>
    </bean>
    <bean id="ibPrdHibernateJpaAdapter" class="org.springframework.orm.jpa.vendor.HibernateJpaVendorAdapter">
        <property name="generateDdl" value="true"/>
        <property name="showSql" value="false"/>
    </bean>

    <bean id="mockScenarioHelper" class="com.lloydsbanking.salsa.opapca.service.RemoteMockScenarioHelper">
        <property name="x711ClientMap">
            <util:map id="x711ClientMap">
                <entry key="LTB" value-ref="x711ClientLtb"/>
                <entry key="HAL" value-ref="x711ClientHlx"/>
                <entry key="BOS" value-ref="x711ClientBos"/>
                <entry key="VER" value-ref="x711ClientVer"/>
            </util:map>
        </property>
    </bean>


    <beans profile="remote-mock-downstream">
    </beans>

    <beans profile="remote-mock-downstream-wps">
    </beans>
</beans>
