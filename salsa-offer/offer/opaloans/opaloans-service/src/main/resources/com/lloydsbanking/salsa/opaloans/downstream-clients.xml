<beans xmlns="http://www.springframework.org/schema/beans"
       xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance"
       xmlns:jpa="http://www.springframework.org/schema/data/jpa"
       xmlns:jee="http://www.springframework.org/schema/jee"
       xmlns:tx="http://www.springframework.org/schema/tx"
       xsi:schemaLocation="http://www.springframework.org/schema/beans http://www.springframework.org/schema/beans/spring-beans-3.2.xsd
            http://www.springframework.org/schema/jee http://www.springframework.org/schema/jee/spring-jee-3.2.xsd
            http://www.springframework.org/schema/data/jpa http://www.springframework.org/schema/data/jpa/spring-jpa.xsd
            http://www.springframework.org/schema/tx http://www.springframework.org/schema/tx/spring-tx.xsd">

    <tx:annotation-driven/>

    <bean id="fsLoanClient" class="com.lloydsbanking.salsa.downstream.loan.client.LoanClientImpl">
        <constructor-arg value="${fs.loan.service.url}"/>
        <constructor-arg>
            <bean class="com.lloydstsb.ib.wsbridge.loan.Loan"/>
        </constructor-arg>
        <constructor-arg value="${fs.loan.service.timeout:19000}"/>
        <constructor-arg ref="cxfClientLoggingInitialiser"/>
    </bean>
    <bean id="f336Client" class="com.lloydsbanking.salsa.downstream.ocis.client.f336.F336ClientImpl">
        <constructor-arg value="${ocis.f336.service.url}"/>
        <constructor-arg>
            <bean class="com.lloydsbanking.xml.schema.enterprise.customermanufacturing.ocis.F336BroProductHoldings_Service"/>
        </constructor-arg>
        <constructor-arg value="${ocis.f336.service.timeout:19000}"/>
        <constructor-arg ref="cxfClientLoggingInitialiser"/>
    </bean>
    <bean id="f061Client" class="com.lloydsbanking.salsa.downstream.ocis.client.f061.F061ClientImpl">
        <constructor-arg value="${ocis.f061.service.url}"/>
        <constructor-arg>
            <bean class="com.lloydstsb.schema.personal.retailparty.ocis.F061EnqPtyDetails_Service"/>
        </constructor-arg>
        <constructor-arg value="${ocis.f061.service.timeout:19000}"/>
        <constructor-arg ref="cxfClientLoggingInitialiser"/>
    </bean>
    <bean id="eligibilityServiceClient" class="com.lloydsbanking.salsa.offer.downstream.EligibilityServiceClient">
        <constructor-arg value="${eligibility.service.url}"/>
        <constructor-arg ref="cxfClientLoggingInitialiser"/>
    </bean>
    <bean id="c216Client" class="com.lloydsbanking.salsa.downstream.ocis.client.c216.C216ClientImpl">
        <constructor-arg value="${ocis.c216.service.url}"/>
        <constructor-arg>
            <bean class="com.lloydstsb.schema.personal.retailparty.ocis.C216BroPtyPrdtHeld_Service"/>
        </constructor-arg>
        <constructor-arg value="${ocis.c216.service.timeout:19000}"/>
        <constructor-arg ref="cxfClientLoggingInitialiser"/>
    </bean>
    <bean id="x711ClientLtb" class="com.lloydsbanking.salsa.downstream.eidv.client.x711.X711ClientImpl">
        <constructor-arg value="${eidv.x711.ltb.service.url}"/>
        <constructor-arg>
            <bean class="lloydstsb.schema.personal.customer.partyidandv.CustomerPartyIDandVService_Service"/>
        </constructor-arg>
        <constructor-arg value="${eidv.x711.ltb.service.timeout:19000}"/>
        <constructor-arg ref="cxfClientLoggingInitialiser"/>
    </bean>
    <bean id="x711ClientVer" class="com.lloydsbanking.salsa.downstream.eidv.client.x711.X711ClientImpl">
        <constructor-arg value="${eidv.x711.ver.service.url}"/>
        <constructor-arg>
            <bean class="lloydstsb.schema.personal.customer.partyidandv.CustomerPartyIDandVService_Service"/>
        </constructor-arg>
        <constructor-arg value="${eidv.x711.ver.service.timeout:19000}"/>
        <constructor-arg ref="cxfClientLoggingInitialiser"/>
    </bean>
    <bean id="x711ClientBos" class="com.lloydsbanking.salsa.downstream.eidv.client.x711.X711ClientImpl">
        <constructor-arg value="${eidv.x711.bos.service.url}"/>
        <constructor-arg>
            <bean class="lloydstsb.schema.personal.customer.partyidandv.CustomerPartyIDandVService_Service"/>
        </constructor-arg>
        <constructor-arg value="${eidv.x711.bos.service.timeout:19000}"/>
        <constructor-arg ref="cxfClientLoggingInitialiser"/>
    </bean>
    <bean id="x711ClientHlx" class="com.lloydsbanking.salsa.downstream.eidv.client.x711.X711ClientImpl">
        <constructor-arg value="${eidv.x711.hlx.service.url}"/>
        <constructor-arg>
            <bean class="lloydstsb.schema.personal.customer.partyidandv.CustomerPartyIDandVService_Service"/>
        </constructor-arg>
        <constructor-arg value="${eidv.x711.hlx.service.timeout:19000}"/>
        <constructor-arg ref="cxfClientLoggingInitialiser"/>
    </bean>

    <bean id="switchService" class="com.lloydsbanking.salsa.downstream.switches.SwitchServiceImpl"/>

    <jee:jndi-lookup id="ibPamConnectionPool" jndi-name="jdbc/ibPamData"/>
    <jee:jndi-lookup id="ibPrdConnectionPool" jndi-name="jdbc/ibPrdData"/>
    <jee:jndi-lookup id="switchesConnectionPool" jndi-name="jdbc/switches"/>

    <bean id="transactionManager" class="org.springframework.orm.jpa.JpaTransactionManager">
        <property name="entityManagerFactory" ref="ibPamEntityManagerFactory"/>
    </bean>
    <bean id="prdTransactionManager" class="org.springframework.orm.jpa.JpaTransactionManager">
        <property name="entityManagerFactory" ref="ibPrdEntityManagerFactory"/>
    </bean>
    <bean id="switchesTransactionManager" class="org.springframework.orm.jpa.JpaTransactionManager">
        <property name="entityManagerFactory" ref="switchesEntityManagerFactory"/>
    </bean>

    <bean id="ibPamHibernateJpaAdapter" class="org.springframework.orm.jpa.vendor.HibernateJpaVendorAdapter">
        <property name="generateDdl" value="false"/>
        <property name="showSql" value="true"/>
        <property name="databasePlatform"
                  value="${ibPamData.database.hibernate.dialect:org.hibernate.dialect.Oracle10gDialect}"/>
    </bean>
    <bean id="ibPrdHibernateJpaAdapter" class="org.springframework.orm.jpa.vendor.HibernateJpaVendorAdapter">
        <property name="generateDdl" value="false"/>
        <property name="showSql" value="true"/>
        <property name="databasePlatform"
                  value="${ibPrdData.database.hibernate.dialect:org.hibernate.dialect.Oracle10gDialect}"/>
    </bean>
    <bean id="switchesHibernateJpaAdapter" class="org.springframework.orm.jpa.vendor.HibernateJpaVendorAdapter">
        <property name="generateDdl" value="false"/>
        <property name="showSql" value="false"/>
        <property name="databasePlatform"
                  value="${switches.database.hibernate.dialect:org.hibernate.dialect.DB2Dialect}"/>
    </bean>

    <bean id="ibPamEntityManagerFactory" class="org.springframework.orm.jpa.LocalContainerEntityManagerFactoryBean">
        <property name="packagesToScan" value="com.lloydsbanking.salsa.downstream.pam.model"/>
        <property name="jpaVendorAdapter" ref="ibPamHibernateJpaAdapter"/>
        <property name="dataSource" ref="ibPamConnectionPool"/>
    </bean>
    <bean id="ibPrdEntityManagerFactory" class="org.springframework.orm.jpa.LocalContainerEntityManagerFactoryBean">
        <property name="packagesToScan" value="com.lloydsbanking.salsa.downstream.prd.model"/>
        <property name="jpaVendorAdapter" ref="ibPrdHibernateJpaAdapter"/>
        <property name="dataSource" ref="ibPrdConnectionPool"/>
    </bean>
    <bean id="switchesEntityManagerFactory" class="org.springframework.orm.jpa.LocalContainerEntityManagerFactoryBean">
        <property name="packagesToScan" value="com.lloydsbanking.salsa.downstream.switches.model"/>
        <property name="jpaVendorAdapter" ref="switchesHibernateJpaAdapter"/>
        <property name="dataSource" ref="switchesConnectionPool"/>
    </bean>

    <jpa:repositories base-package="com.lloydsbanking.salsa.downstream.pam.jdbc"
                      entity-manager-factory-ref="ibPamEntityManagerFactory"
                      transaction-manager-ref="transactionManager"/>
    <jpa:repositories base-package="com.lloydsbanking.salsa.downstream.prd.jdbc"
                      entity-manager-factory-ref="ibPrdEntityManagerFactory"
                      transaction-manager-ref="prdTransactionManager"/>
    <jpa:repositories base-package="com.lloydsbanking.salsa.downstream.switches.jdbc"
                      entity-manager-factory-ref="switchesEntityManagerFactory"
                      transaction-manager-ref="switchesTransactionManager"/>
</beans>
