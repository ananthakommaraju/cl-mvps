<beans xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance"
       xmlns:context="http://www.springframework.org/schema/context"
       xmlns="http://www.springframework.org/schema/beans" xmlns:util="http://www.springframework.org/schema/util"
       xsi:schemaLocation="http://www.springframework.org/schema/beans http://www.springframework.org/schema/beans/spring-beans-3.2.xsd
            http://www.springframework.org/schema/context http://www.springframework.org/schema/context/spring-context-3.2.xsd
             http://www.springframework.org/schema/util http://www.springframework.org/schema/util/spring-util-3.2.xsd">


    <context:component-scan base-package="com.lloydsbanking.salsa.apaloans"/>
    <import resource="classpath:/com/lloydsbanking/salsa/apaloans/downstream-clients.xml"/>
    <import resource="classpath:com/lloydsbanking/salsa/downstream/pam/pam-common.xml"/>
    <import resource="classpath:com/lloydsbanking/salsa/downstream/pam/pam-retrieve.xml"/>
    <import resource="classpath:com/lloydsbanking/salsa/downstream/pam/pam-create.xml"/>

    <bean id="headerRetriever" class="com.lloydsbanking.salsa.header.gmo.HeaderRetriever"></bean>
    <bean id="bapiHeaderToStHeaderConverter"
          class="com.lloydsbanking.salsa.downstream.account.convert.BapiHeaderToStHeaderConverter"></bean>
    <bean id="referralTeamRetriever"
          class="com.lloydsbanking.salsa.activate.administer.downstream.ReferralTeamRetriever"></bean>
    <bean id="createTask"
          class="com.lloydsbanking.salsa.activate.administer.downstream.CreateTask"></bean>
    <bean id="x741RequestFactory"
          class="com.lloydsbanking.salsa.activate.administer.convert.X741RequestFactory"></bean>
    <bean id="exceptionUtilityActivate"
          class="com.lloydsbanking.salsa.activate.utility.ExceptionUtilityActivate"></bean>
    <bean id="lookUpValueRetriever"
          class="com.lloydsbanking.salsa.activate.downstream.LookUpValueRetriever"></bean>
    <bean id="requestToResponseHeaderConverter"
          class="com.lloydsbanking.salsa.header.gmo.RequestToResponseHeaderConverter"></bean>

    <bean id="createPamService"
          class="com.lloydsbanking.salsa.downstream.pam.service.CreatePamService"></bean>

</beans>
