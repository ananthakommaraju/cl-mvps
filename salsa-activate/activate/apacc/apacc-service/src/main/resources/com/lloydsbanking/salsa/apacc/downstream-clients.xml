<beans xmlns="http://www.springframework.org/schema/beans"
       xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance"
       xmlns:jee="http://www.springframework.org/schema/jee"
       xmlns:jpa="http://www.springframework.org/schema/data/jpa"
       xmlns:tx="http://www.springframework.org/schema/tx"
       xmlns:c="http://www.springframework.org/schema/c"
       xsi:schemaLocation="http://www.springframework.org/schema/beans http://www.springframework.org/schema/beans/spring-beans-3.2.xsd
            http://www.springframework.org/schema/jee http://www.springframework.org/schema/jee/spring-jee-3.2.xsd
            http://www.springframework.org/schema/data/jpa http://www.springframework.org/schema/data/jpa/spring-jpa.xsd
            http://www.springframework.org/schema/tx http://www.springframework.org/schema/tx/spring-tx.xsd">

    <import resource="classpath:/com/lloydsbanking/salsa/activate/downstream-clients.xml"/>
    <import resource="classpath:/com/lloydsbanking/salsa/apacc/service/fulfil/downstream-clients.xml"/>

    <tx:annotation-driven/>

    <jee:jndi-lookup id="ibPamConnectionPool" jndi-name="jdbc/ibPamData"/>

    <bean id="transactionManager" class="org.springframework.orm.jpa.JpaTransactionManager">
        <property name="entityManagerFactory" ref="ibPamEntityManagerFactory"/>
    </bean>

    <bean id="ibPamHibernateJpaAdapter" class="org.springframework.orm.jpa.vendor.HibernateJpaVendorAdapter">
        <property name="generateDdl" value="false"/>
        <property name="showSql" value="true"/>
        <property name="databasePlatform"
                  value="${ibPamData.database.hibernate.dialect:org.hibernate.dialect.Oracle10gDialect}"/>
    </bean>

    <bean id="ibPamEntityManagerFactory" class="org.springframework.orm.jpa.LocalContainerEntityManagerFactoryBean">
        <property name="packagesToScan" value="com.lloydsbanking.salsa.downstream.pam.model"/>
        <property name="jpaVendorAdapter" ref="ibPamHibernateJpaAdapter"/>
        <property name="dataSource" ref="ibPamConnectionPool"/>
    </bean>

    <jpa:repositories base-package="com.lloydsbanking.salsa.downstream.pam.jdbc"
                      entity-manager-factory-ref="ibPamEntityManagerFactory"
            />

    <bean id="switchService" class="com.lloydsbanking.salsa.downstream.switches.SwitchServiceImpl"/>

    <jee:jndi-lookup id="switchesConnectionPool" jndi-name="jdbc/switches"/>

    <bean id="switchesTransactionManager" class="org.springframework.orm.jpa.JpaTransactionManager">
        <property name="entityManagerFactory" ref="switchesEntityManagerFactory"/>
    </bean>

    <bean id="switchesHibernateJpaAdapter" class="org.springframework.orm.jpa.vendor.HibernateJpaVendorAdapter">
        <property name="generateDdl" value="false"/>
        <property name="showSql" value="false"/>
        <property name="databasePlatform"
                  value="${switches.database.hibernate.dialect:org.hibernate.dialect.DB2Dialect}"/>
    </bean>

    <bean id="switchesEntityManagerFactory" class="org.springframework.orm.jpa.LocalContainerEntityManagerFactoryBean">
        <property name="packagesToScan" value="com.lloydsbanking.salsa.downstream.switches.model"/>
        <property name="jpaVendorAdapter" ref="switchesHibernateJpaAdapter"/>
        <property name="dataSource" ref="switchesConnectionPool"/>
    </bean>


    <jpa:repositories base-package="com.lloydsbanking.salsa.downstream.switches.jdbc"
                      entity-manager-factory-ref="switchesEntityManagerFactory"
                      transaction-manager-ref="switchesTransactionManager"/>


    <bean class="com.lloydsbanking.salsa.aop.CallLoggingAndTimingAutoProxyCreator">
        <constructor-arg>
            <list>
                <bean class="com.lloydsbanking.salsa.logging.BeanLoggingConfig" c:beanName="f251Client"
                      c:interfaceClass="com.lloydsbanking.salsa.downstream.fdi.client.f251.F251Client"
                      c:prefix="FDI-AddOMSOffers-F251"/>
                <bean class="com.lloydsbanking.salsa.logging.BeanLoggingConfig" c:beanName="f241Client"
                      c:interfaceClass="com.lloydsbanking.salsa.downstream.fdi.client.f241.F241Client"
                      c:prefix="FDI-CreateCreditCard-F241"/>
                <bean class="com.lloydsbanking.salsa.logging.BeanLoggingConfig" c:beanName="f241V1Client"
                      c:interfaceClass="com.lloydsbanking.salsa.downstream.fdi.client.f241v1.F241V1Client"
                      c:prefix="FDI-CreateCreditCard-F241V1"/>
                <bean class="com.lloydsbanking.salsa.logging.BeanLoggingConfig" c:beanName="f259Client"
                      c:interfaceClass="com.lloydsbanking.salsa.downstream.ocis.client.f259.F259Client"
                      c:prefix="OCIS-AddNewProduct-F259"/>
                <bean class="com.lloydsbanking.salsa.logging.BeanLoggingConfig" c:beanName="fsSystemClient"
                      c:interfaceClass="com.lloydsbanking.salsa.downstream.fsystem.client.FsSystemClient"
                      c:prefix="System-RetrieveNextBusinessDays-B748"/>
                <bean class="com.lloydsbanking.salsa.logging.BeanLoggingConfig" c:beanName="encryptClient"
                      c:interfaceClass="com.lloydsbanking.salsa.downstream.dp.client.encrypt.EncryptClient"
                      c:prefix="DP-EncryptData"/>
                <bean class="com.lloydsbanking.salsa.logging.BeanLoggingConfig" c:beanName="f425Client"
                      c:interfaceClass="com.lloydsbanking.salsa.downstream.asm.client.f425.F425Client"
                      c:prefix="ASM-retrieveUpdatedCreditDecision-F425"/>
                <bean class="com.lloydsbanking.salsa.logging.BeanLoggingConfig" c:beanName="x741Client"
                      c:interfaceClass="com.lloydsbanking.salsa.downstream.tms.client.x741.X741Client"
                      c:prefix="TMS-X741"/>
                <bean class="com.lloydsbanking.salsa.logging.BeanLoggingConfig" c:beanName="f060Client"
                      c:interfaceClass="com.lloydsbanking.salsa.downstream.ocis.client.f060.F060Client"
                      c:prefix="OCIS-updateMarketingPreference-F060"/>
                <bean class="com.lloydsbanking.salsa.logging.BeanLoggingConfig" c:beanName="f061Client"
                      c:interfaceClass="com.lloydsbanking.salsa.downstream.ocis.client.f061.F061Client"
                      c:prefix="OCIS-createInvolvedParty-F061"/>
                <bean class="com.lloydsbanking.salsa.logging.BeanLoggingConfig" c:beanName="f062Client"
                      c:interfaceClass="com.lloydsbanking.salsa.downstream.ocis.client.f062.F062Client"
                      c:prefix="OCIS-updateCustomerRecord-F062"/>
                <bean class="com.lloydsbanking.salsa.logging.BeanLoggingConfig" c:beanName="accountClient"
                      c:interfaceClass="com.lloydsbanking.salsa.downstream.account.client.AccountClient"
                      c:prefix="Account-Client"/>
                <bean class="com.lloydsbanking.salsa.logging.BeanLoggingConfig" c:beanName="applicationClient"
                      c:interfaceClass="com.lloydsbanking.salsa.downstream.application.client.ApplicationClient"
                      c:prefix="Application-Client"/>
            </list>
        </constructor-arg>
    </bean>
</beans>